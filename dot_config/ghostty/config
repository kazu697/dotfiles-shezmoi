keybind = shift+super+j=resize_split:down,30
keybind = shift+super+k=resize_split:up,30
keybind = shift+super+l=resize_split:right,30
keybind = ctrl+shift+j=scroll_page_fractional:0.5
keybind = ctrl+shift+k=scroll_page_fractional:-0.5

